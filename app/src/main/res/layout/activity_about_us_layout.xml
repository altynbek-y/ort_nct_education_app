<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.aboutus.AboutUsActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_settings"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true" />
    <ImageView
        android:id="@+id/logo_neobis"
        android:layout_below="@id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:padding="25dp"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:src="@drawable/ic_neobis_logo" />
    <TextView
        android:layout_below="@id/logo_neobis"
        android:layout_above="@id/info_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:typeface="normal"
        android:text="@string/about_us_text"
        android:textColor="@android:color/black"
        android:textSize="15dp"></TextView>
    <RelativeLayout
        android:id="@+id/info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:id="@+id/block1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
        <ImageView
            android:id="@+id/mail_icon"
            android:src="@drawable/ic_mail_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/mail_icon"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="normal"
            android:text="neobiskg@gmail.com"
            android:textSize="15dp"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/block2"
            android:layout_below="@id/block1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/call_icon"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/phone_number1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/call_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="normal"
                android:text="+996 550 225 310"
                android:textSize="15dp"></TextView>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/call_icon"
                android:layout_below="@id/phone_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="normal"
                android:text="+996 700 636 247"
                android:textSize="15dp"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/block2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/mail_call"
                android:src="@drawable/ic_location_on_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/mail_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="normal"
                android:text="Кыргызстан, г.Бишкек Байтик Баатыра,70 3-этаж, 401 офис"
                android:textSize="15dp"></TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>